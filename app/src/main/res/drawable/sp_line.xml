<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="90"
            android:toDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%" >
            <shape
                android:shape="line"
                android:top="1dip" >
                <stroke
                    android:width="1dip" android:dashGap="@dimen/dp1" android:dashWidth="@dimen/dp8"  android:color="@color/purple_200"/>
            </shape>
        </rotate>
    </item>
</selector>