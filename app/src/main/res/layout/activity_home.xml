<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:orientation="vertical"
    tools:context=".ui.home.HomeActivity">
<!--android:layout_marginBottom="@dimen/dp80"-->
    <FrameLayout
        android:id="@+id/container"
        android:name="app.tapho.ui.home.HomeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        tools:layout="@layout/fragment_home" />



    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/sp_white_corner_10"
        android:visibility="gone"
        android:baselineAligned="false">

        <!--        Home tab-->

        <LinearLayout
            android:id="@+id/homeTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/homeIv"
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                android:contentDescription="@string/home"
                android:src="@drawable/selector_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/home"
                android:textSize="12sp"
                app:fontFamily="@font/sans_medium"
                android:textColor="@drawable/selector_text_color" />
        </LinearLayout>

        <!--        Fav tab-->

        <LinearLayout
            android:id="@+id/favouriteTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                android:contentDescription="@string/offers"
                android:src="@drawable/ic_baseline_favorite_border_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/favourites"
                app:fontFamily="@font/sans_medium"
                android:textColor="@drawable/selector_text_color"
                android:textSize="@dimen/sp12" />

        </LinearLayout>


        <!--        Shop tab-->
        <LinearLayout
            android:id="@+id/ShopNow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                android:contentDescription="@string/tcash"
                android:src="@drawable/selector_coin_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Shop"
                android:textSize="12sp"
                app:fontFamily="@font/sans_medium"
                android:textColor="@drawable/selector_text_color" />

        </LinearLayout>

        <!--        offer tab-->
        <LinearLayout
            android:id="@+id/offerTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                android:contentDescription="@string/offers"
                android:src="@drawable/selector_offer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/offers"
                android:textSize="@dimen/sp12"
                app:fontFamily="@font/sans_medium"
                android:textColor="@drawable/selector_text_color" />

        </LinearLayout>

        <!--        Cashback Stores tab-->
        <LinearLayout
            android:id="@+id/Cashback"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                android:contentDescription="@string/offers"
                android:src="@drawable/selector_coin_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/Merchants"
                android:textSize="12sp"
                app:fontFamily="@font/sans_medium"
                android:textColor="@drawable/selector_text_color" />

        </LinearLayout>



        <!--        News tab-->
        <LinearLayout
            android:id="@+id/News"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                android:contentDescription="@string/offers"
                android:src="@drawable/news_menu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="News"
                app:fontFamily="@font/sans_medium"
                android:textColor="@drawable/selector_text_color"
                android:textSize="@dimen/sp12" />

        </LinearLayout>


        <!--        Tcash tab-->
        <LinearLayout
            android:id="@+id/tCashTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                android:contentDescription="@string/tcash"
                android:src="@drawable/selector_wallet_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Earnings"
                app:fontFamily="@font/sans_medium"
                android:textColor="@drawable/selector_text_color"
                android:textSize="@dimen/sp12" />

        </LinearLayout>

        <!--        Games tab-->
        <LinearLayout
            android:id="@+id/Games"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                android:contentDescription="@string/offers"
                android:src="@drawable/selector_game_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Games"
                app:fontFamily="@font/sans_medium"
                android:textColor="@drawable/selector_text_color"
                android:textSize="@dimen/sp12" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_above="@+id/layoutBottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-30dp"
        android:background="@drawable/sp_white_25"
        android:elevation="@dimen/dp5"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/homeIv1"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:contentDescription="@string/home"
            android:src="@drawable/selector_home" />

    </LinearLayout>


</RelativeLayout>