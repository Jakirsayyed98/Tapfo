<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="@dimen/dp5"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/imageIv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/dp2"
                android:layout_marginTop="@dimen/dp2"
                android:layout_marginEnd="@dimen/dp5"
                android:layout_marginBottom="@dimen/dp2"
                app:cardBackgroundColor="@color/grey_v_light"
                app:cardCornerRadius="@dimen/dp40"
                app:cardElevation="-10dp">

                <ImageView
                    android:id="@+id/imageIv"
                    android:layout_width="@dimen/dp70"
                    android:layout_height="@dimen/dp70"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/dp5"
                    />
            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/dp10">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:autoSizeTextType="uniform"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Flipkart E-Gift Vouchers"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:fontFamily="@font/sans_bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp5"
                        android:autoSizeTextType="uniform"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Flat 9% OFF"
                        android:textColor="@color/green_dark"
                        android:textSize="@dimen/sp12"
                        app:fontFamily="@font/sans_medium" />
                </LinearLayout>



            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="-10dp"
                android:background="@drawable/voucher_cornor"
                android:padding="@dimen/dp5"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/dp10">

                <TextView
                    android:id="@+id/voucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/green_dark"
                    android:paddingStart="@dimen/dp5"
                    android:paddingTop="@dimen/dp15"
                    android:paddingEnd="@dimen/dp15"
                    android:paddingBottom="@dimen/dp5"
                    android:text="Voucher"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    app:fontFamily="@font/sans_medium" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/tandc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp5"
                android:layout_marginEnd="@dimen/dp5"
                android:layout_above="@+id/view"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reddem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="@dimen/dp5"
                    android:text="Online Redeemable"
                    app:fontFamily="@font/sans_medium"
                    android:textColor="@color/black"
                    android:textSize="10sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:text="T&amp;C Apply"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    app:fontFamily="@font/sans_medium"
                    android:textSize="8sp" />

            </LinearLayout>
            
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/grey_light"
                android:layout_marginTop="@dimen/dp5"
                android:backgroundTint="@color/grey_light"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>