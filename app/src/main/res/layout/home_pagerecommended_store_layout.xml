<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/direct_rippleeffect"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp10"
            app:cardCornerRadius="@dimen/dp100"
             />


        <TextView
            android:id="@+id/cashbackt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/icon"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp5"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-20dp"
            android:background="@drawable/button"
            android:backgroundTint="@color/green_dark"
            android:gravity="center"
            android:paddingLeft="@dimen/dp5"
            android:paddingRight="@dimen/dp5"
            android:text="Cashback"
            app:fontFamily="@font/sans_medium"
            android:textColor="@color/white"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/cashback"
            android:layout_width="@dimen/dp80"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp12"
            app:fontFamily="@font/tt_regular"
            tools:text="Earn Upto 12% Cashback" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cashback"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginBottom="@dimen/dp10"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14"
            app:fontFamily="@font/sans_medium"
            tools:text="Dominoes" />


    </RelativeLayout>


</RelativeLayout>