<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="@dimen/dp100"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp20"
    android:paddingTop="@dimen/dp30"
    android:paddingRight="@dimen/dp15"
    android:paddingBottom="@dimen/dp10"
    android:background="@drawable/sp_white_top_corner_10"
    android:backgroundTint="@color/white"
    app:layout_behavior="@string/bottom_sheet_behavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Pending Reward Policy"
            android:textSize="16sp"
            android:layout_weight="1"
            app:fontFamily="@font/sans_medium" />

        <ImageView
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:src="@drawable/running_t_icon"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:fontFamily="@font/sans_medium"
        android:text="Mini Save"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/discriptionTV2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Your pending rewards will be validated on your next recharge payment."
        android:textColor="@color/black"
        app:fontFamily="@font/tt_regular"
        android:textSize="13sp" />

 <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:fontFamily="@font/sans_medium"
        android:text="Recharge"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/discriptionTV1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Your pending rewards will be validated on your next recharge payment."
        android:textColor="@color/black"
        app:fontFamily="@font/tt_regular"
        android:textSize="13sp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gotit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="@dimen/dp20"
        android:background="@drawable/base_button_design"
        android:backgroundTint="@color/black"
        android:elevation="@dimen/dp50"
        android:text="Okay, Got it"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:fontFamily="@font/tt_regular" />

</LinearLayout>