<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp5"
    android:paddingEnd="@dimen/dp5"
    android:paddingTop="@dimen/dp10"
    android:paddingBottom="@dimen/dp10">

    <androidx.cardview.widget.CardView
        android:id="@+id/imageIv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp2"
        android:layout_marginTop="@dimen/dp2"
        android:layout_marginEnd="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp2"
        app:cardBackgroundColor="@color/grey_v_light"
        app:cardCornerRadius="@dimen/dp40"
        app:cardElevation="-10dp">

        <ImageView
            android:id="@+id/imageIv"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_margin="@dimen/dp10"
            tools:background="@drawable/ic_add_circle" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageIv2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTv"
            style="@style/TextViewSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp14"
            app:fontFamily="@font/sans_medium"
            tools:text="Marketplace" />

        <TextView
            android:id="@+id/offerTv"
            style="@style/TextViewNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTv"
            android:layout_toEndOf="@+id/imageIv"
            android:textColor="@color/black"
            android:layout_marginTop="7dp"
            android:textSize="12sp"
            app:fontFamily="@font/sans_medium"
            tools:text="3 offers" />
    </LinearLayout>
</RelativeLayout>