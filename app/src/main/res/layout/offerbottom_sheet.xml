<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp20"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <ImageView
            android:id="@+id/partnerIV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:fontFamily="@font/sans_medium" />

            <TextView
                android:id="@+id/couponsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:fontFamily="@font/sans_medium"
                android:text="Coupons" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

            <TextView
                android:id="@+id/ExpireDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/dp20"
                android:text="Expire Date"
                app:fontFamily="@font/sans_medium"
                android:textSize="@dimen/sp12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ExpireDateTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:gravity="end"
                android:layout_marginRight="@dimen/dp20"
                android:text="March 26"
                app:fontFamily="@font/sans_medium"
                android:textSize="10sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/grabTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grab! 60% off up to ₹120 on Flash Pizza"
        android:layout_marginTop="@dimen/dp15"
        app:fontFamily="@font/sans_medium"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/grabAdditional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:text="+ Get upto ₹40 additional cashback*"
        app:fontFamily="@font/sans_medium"
        android:textColor="@color/green_light"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/hintCoupn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copy code and use at checkout"
        app:fontFamily="@font/sans_medium"
        android:layout_marginTop="@dimen/dp10"
        android:textSize="14sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/couponsCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:background="@drawable/cardviewboarder"
        app:cardCornerRadius="@dimen/dp20">

        <TextView
            android:id="@+id/coupons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:padding="@dimen/dp5"
            app:fontFamily="@font/sans_medium"
            android:text="XYXX012Z" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@drawable/cardviewboarder"
            android:backgroundTint="@color/green_dark"
            app:cardCornerRadius="@dimen/dp20">

            <TextView
                android:id="@+id/copybtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="Copy"
                app:fontFamily="@font/sans_medium"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/peopleUsed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2936 people used this"
        app:fontFamily="@font/sans_medium"
        android:layout_marginTop="@dimen/dp10"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fontFamily="@font/sans_medium"
        android:layout_marginTop="@dimen/dp10"
        android:text="Validity" />

    <TextView
        android:id="@+id/validitydaysleft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fontFamily="@font/sans_medium"
        android:text="03 days left" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fontFamily="@font/sans_medium"
        android:layout_marginTop="@dimen/dp10"
        android:text="Details" />

    <TextView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fontFamily="@font/sans_medium"
        android:text="* Grab! 60% off up to ₹120 on Flash Pizza" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/redeem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Redeem Now"
        android:backgroundTint="@color/green_dark"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginBottom="10dp"
        app:fontFamily="@font/sans_medium"
        android:textColor="@color/white"
        android:background="@drawable/offer_btn"/>

</LinearLayout>