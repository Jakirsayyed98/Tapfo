    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        app:cardElevation="2dp"
        android:layout_marginBottom="2.5dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp10"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingTop="@dimen/dp10"
            android:paddingBottom="@dimen/dp10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp5"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/imagelayout"
                    android:layout_width="@dimen/dp60"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="-5dp"
                    android:layout_height="60dp"
                    app:cardElevation="-5dp"
                    app:cardCornerRadius="100dp">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@color/lightpurple3" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="@dimen/dp20"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="Delicious Pizza Slices "
                        android:textSize="14sp"
                        app:fontFamily="@font/tt_regular" />

                    <TextView
                        android:id="@+id/discription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:text="You have recieved ₹29.0 Cashback from myntra order id JNBNBBNN on amount ₹1590 on 23 May."
                        android:textColor="#565656"
                        android:textSize="12sp"
                        android:layout_marginTop="@dimen/dp2"
                        android:ellipsize="end"
                        android:paddingRight="@dimen/dp15"
                        app:fontFamily="@font/tt_regular" />


                    <TextView
                        android:id="@+id/time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_marginTop="@dimen/dp5"
                        android:text="12.15AM"
                        app:fontFamily="@font/tt_regular"
                        android:textColor="@color/grey_dark"
                        android:textSize="9sp" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
