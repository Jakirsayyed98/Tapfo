<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp5"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingEnd="@dimen/dp10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/dish_type_bg"
                android:padding="@dimen/dp3"
                android:src="@drawable/ic_dot"
                app:tint="@color/red" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Monster pizza"
                android:textSize="18sp"
                app:fontFamily="@font/sans_medium" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="Paneer, Schezwan, Capsicums, Tomato, Chees, Onion"
            android:textColor="@color/grey_dark"
            android:textSize="13sp"
            app:fontFamily="@font/sans_medium" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10"
                android:layout_weight="1"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:text="₹190"
                android:textSize="18sp"
                android:textStyle="bold"
                app:fontFamily="@font/sans_medium" />

            <LinearLayout
                android:id="@+id/addlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_boarder_3"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:padding="@dimen/dp10">

                <ImageView
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_marginStart="@dimen/dp5"
                    android:src="@drawable/addition_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Add"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    app:fontFamily="@font/sans_medium" />



            </LinearLayout>
            <LinearLayout
                android:id="@+id/cartQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_boarder_3"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:padding="@dimen/dp10">

                <ImageView
                    android:id="@+id/less"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_marginStart="@dimen/dp5"
                    android:src="@drawable/minus_icon" />

                <TextView
                    android:id="@+id/qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="₹190"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    app:fontFamily="@font/sans_medium" />

                <ImageView
                    android:id="@+id/add"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:src="@drawable/addition_icon"
                    android:layout_marginEnd="@dimen/dp5"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/dp10"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/free_delivery" />
    </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:text="Customisable"
            android:textColor="@color/grey_dark"
            android:textSize="11sp"
            app:fontFamily="@font/sans_medium" />

    </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/grey_light"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"/>
</LinearLayout>