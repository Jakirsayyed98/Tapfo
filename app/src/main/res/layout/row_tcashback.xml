<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout1"
        android:layout_marginLeft="@dimen/dp2"
        android:layout_marginRight="@dimen/dp2"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/transactionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp5"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="@dimen/dp5">

            <TextView
                android:id="@+id/dateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:maxLength="6"
                android:paddingLeft="5dp"
                android:paddingRight="@dimen/dp5"
                android:text="27 Feb"
                app:fontFamily="@font/sans_medium"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:layout_margin="@dimen/dp10"
                        tools:background="@color/black" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/brandNameTv"
                                android:layout_width="@dimen/dp160"
                                android:layout_height="wrap_content"
                                android:text="AJIO"
                                android:textSize="14sp"
                                android:ellipsize="end"
                                android:textStyle="bold"
                                android:maxLines="1"
                                app:fontFamily="@font/sans_medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textColor="#8F8E8E"
                                app:fontFamily="@font/tt_regular"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/refrenceIdTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLength="30"
                                android:text="TYU789076GF"
                                android:textColor="#ACA8A8"
                                android:ellipsize="end"
                                android:textSize="11sp"
                                app:fontFamily="@font/tt_regular" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/salesAmountTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹567"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:fontFamily="@font/sans_medium" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="140dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cashbackPercent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:gravity="end"
                        app:fontFamily="@font/tt_regular"
                        android:text="@string/_2_9_cashback"
                        android:textSize="12sp" />



                    <TextView
                        android:id="@+id/balenceTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="₹34.40"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:fontFamily="@font/sans_medium" />

                    <TextView
                        android:id="@+id/statusTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="pending from Ajio"
                        app:fontFamily="@font/tt_regular"
                        android:textSize="10sp" />
                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>