                    android:textColor="@color/grey_dark"
                    app:fontFamily="@font/tt_regular"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp40"
                    android:paddingEnd="@dimen/dp40">


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/grey_v_light"
                        app:cardCornerRadius="@dimen/dp100"
                        app:cardElevation="-15dp">

                    <ImageView
                        android:id="@+id/merchant_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/dp5"
                        android:src="@drawable/icon_img" />
                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp5"
                        android:background="@drawable/sp_line_horizontal" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:rotation="180"
                        android:src="@drawable/double_arrow"
                        app:tint="@color/black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/sp_line_horizontal" />


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/wallet_wallet_icon" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal">

                    <LinearLayout
