                            android:layout_height="wrap_content"
                            app:fontFamily="@font/tt_regular"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/alltransaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borader_cornor"
                    android:backgroundTint="@color/black"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_marginStart="@dimen/dp5"
                    android:layout_marginEnd="@dimen/dp5"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp20"
                    android:paddingTop="@dimen/dp20"
                    android:paddingEnd="@dimen/dp20"
                    android:paddingBottom="@dimen/dp20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/merchantName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="MakeMyTrip"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                app:fontFamily="@font/sans_medium" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp5"
                                android:text="View Earnings Insights"
                                android:textColor="@color/white"
                                android:textSize="11sp"
                                app:fontFamily="@font/tt_regular" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginTop="@dimen/dp25"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Saved with us"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:textAlignment="center"
                                    app:fontFamily="@font/sans_medium" />


                                <TextView
                                    android:id="@+id/verifiedAmount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp5"
                                    android:textColor="@color/green_dark"
                                    android:textSize="16sp"
                                    android:textAlignment="center"
                                    app:fontFamily="@font/tt_medium" />

                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/double_arrow"
                            app:tint="@color/white" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/howitwork"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/howitwork"
                                android:textAlignment="textEnd"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                app:fontFamily="@font/tt_medium" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp5"
                                android:text="Terms &amp; Policies"
                                android:textAlignment="textEnd"
                                android:textColor="@color/white"
                                android:textSize="11sp"
                                app:fontFamily="@font/tt_regular" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginTop="@dimen/dp25"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/dp10">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Outstanding "
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:textAlignment="center"
                                    app:fontFamily="@font/tt_medium" />


                                <TextView
                                    android:id="@+id/pendingcashback"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp5"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:textAlignment="center"
                                    app:fontFamily="@font/tt_medium" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tandc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp20"
                    android:paddingTop="@dimen/dp15"
                    android:paddingEnd="@dimen/dp20"
                    android:paddingBottom="@dimen/dp10"
                    android:text="@string/by_proceeding_to_freshtohome"
                    android:textAlignment="center"
                    android:textColor="@color/grey_dark"
                    app:fontFamily="@font/tt_regular"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/continueLi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="@dimen/dp10"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/login_btn1"
                    android:backgroundTint="#1f9d55"
                    android:elevation="@dimen/dp5"
                    android:orientation="vertical"
                    android:padding="@dimen/dp5"
                    app:fontFamily="@font/sans_medium">

                    <TextView
                        android:id="@+id/nameTv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Open Swiggy "
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp14"
                        android:layout_marginTop="@dimen/dp5"
                        app:fontFamily="@font/tt_medium"/>

                    <TextView
                        android:id="@+id/cashback1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="to activate upto 5% cashback*"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/dp5"
                        android:textSize="11sp"
                        android:layout_marginBottom="@dimen/dp5"
                        app:fontFamily="@font/tt_regular" />

                </LinearLayout>


                <TextView
                    android:id="@+id/aboutCashbackT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About Cashback Offer"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="@dimen/dp20"
                    app:fontFamily="@font/sans_medium" />

                <TextView
                    android:id="@+id/aboutCashback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:paddingStart="@dimen/dp40"
                    android:text="â€¢ Applicable on D omestic flights "
                    android:textColor="@color/grey_dark"
                    android:textSize="12sp"
                    app:fontFamily="@font/tt_regular" />
<!--                Things to note-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp30"
                        android:text="Things to note"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:fontFamily="@font/tt_bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dp10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="7dp"
                                android:layout_height="7dp"
                                android:src="@drawable/ic_dot"
                                app:tint="@color/grey_dark" />

                            <TextView
                                android:id="@+id/T1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="@string/takes_24_48_hrs_to_track_the_transaction_status"
                                android:textSize="14sp"
                                android:textColor="@color/grey_dark"
                                app:fontFamily="@font/tt_regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="7dp"
                                android:layout_height="7dp"
                                android:src="@drawable/ic_dot"
                                app:tint="@color/grey_dark" />


                            <TextView
                                android:id="@+id/T2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="@string/to_avail_this_cashback_open_swiggy_via_tapfo_app"
                                android:textSize="14sp"
                                android:textColor="@color/grey_dark"
                                app:fontFamily="@font/tt_regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="7dp"
                                android:layout_height="7dp"
                                android:layout_marginTop="@dimen/dp5"
                                android:src="@drawable/ic_dot"
                                app:tint="@color/grey_dark" />

                            <TextView
                                android:id="@+id/T3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="@string/cashback_offer_is_active_for_a_limited_time"
                                android:textSize="14sp"
                                android:textColor="@color/grey_dark"
                                app:fontFamily="@font/tt_regular" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="7dp"
                                android:layout_height="7dp"
                                android:layout_marginTop="@dimen/dp5"
                                android:src="@drawable/ic_dot"
                                app:tint="@color/grey_dark" />


                            <TextView
                                android:id="@+id/T4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="@string/the_cashback_offer_will_be_calculated"
                                android:textSize="14sp"
                                android:textColor="@color/grey_dark"
                                app:fontFamily="@font/tt_regular" />

                        </LinearLayout>

                        <LinearLayout
