<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp70"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp5"
    android:padding="@dimen/dp5">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dp65"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp5"
        android:src="@color/grey_light" />

    <TextView
        android:id="@+id/nameTv"
        android:layout_toStartOf="@+id/btnAdd"
        app:fontFamily="@font/sans_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image"
        android:background="@color/grey_light"
        tools:text="TEST" />

    <TextView
        android:id="@+id/saleTv"
        app:fontFamily="@font/sans_medium"
        android:layout_toStartOf="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTv"
        android:layout_marginTop="@dimen/dp5"
        android:layout_toEndOf="@+id/image"
        android:background="@color/grey_light"
        tools:text="TEST" />

    <TextView
        android:id="@+id/saleAmountTv"
        app:fontFamily="@font/sans_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saleTv"
        android:layout_toEndOf="@+id/image"
        android:textColor="@color/green_light"
        tools:text="TEST" />


    <TextView
        android:id="@+id/btnAdd"
        app:fontFamily="@font/sans_medium"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp30"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp10"
        android:background="@drawable/selector_add"
        android:backgroundTint="@color/grey_light"
        android:gravity="center"
        android:minWidth="@dimen/dp80"
        android:paddingStart="@dimen/dp10"
        android:paddingEnd="@dimen/dp10"
        android:textColor="@color/white" />

</RelativeLayout>