<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp5"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/white"
        android:layout_margin="@dimen/dp5"
        android:elevation="@dimen/dp5"
        android:background="@drawable/button_boarder_2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/dp15">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/dp35"
            android:layout_height="@dimen/dp35"
            android:scaleType="centerCrop"
            android:src="@drawable/flipkart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="-8dp"
            android:textSize="20sp"
            app:fontFamily="@font/sans_medium"
            app:layout_constraintStart_toEndOf="@+id/icon"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/VoucherValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="-10dp"
            android:textColor="@color/grey_dark"
            android:textSize="12sp"
            app:fontFamily="@font/sans_medium"
            app:layout_constraintBottom_toBottomOf="@+id/icon"
            app:layout_constraintStart_toEndOf="@+id/icon"
            app:layout_constraintTop_toBottomOf="@+id/name" />


        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tapfo"
            android:textSize="20sp"
            app:fontFamily="@font/sans_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voucher"
            android:textSize="10sp"
            app:fontFamily="@font/sans_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
            tools:ignore="SmallSp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout1" />

        <ImageView
            android:id="@+id/rightcornor"
            android:layout_width="@dimen/dp15"
            android:layout_height="@dimen/dp15"
            android:src="@drawable/button_boarder_3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="-8dp"
            app:layout_constraintTop_toBottomOf="@+id/view6"
            app:tint="@color/black"
            android:contentDescription="@string/todo" />

        <ImageView
            android:id="@+id/leftcornor"
            android:layout_width="@dimen/dp15"
            android:layout_height="@dimen/dp15"
            android:src="@drawable/button_boarder_3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="-8dp"
            app:layout_constraintTop_toBottomOf="@+id/view6"
            app:tint="@color/black"
            android:contentDescription="@string/todo"/>


        <View
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/leftcornor" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view7">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/voucher_code"
                android:textColor="#0A0A0A"
                android:textSize="12sp"
                app:fontFamily="@font/sans_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:textSize="16sp"
                app:fontFamily="@font/sans_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView18" />


            <ImageView
                android:id="@+id/copybtn"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:src="@drawable/copy_icon"
                app:layout_constraintBottom_toBottomOf="@+id/card_number"
                app:layout_constraintStart_toEndOf="@+id/card_number"
                app:layout_constraintTop_toTopOf="@+id/card_number"
                android:layout_marginStart="@dimen/dp10"
                android:contentDescription="@string/todo"/>


            <TextView
                android:id="@+id/validityTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/validity"
                android:textSize="12sp"
                app:fontFamily="@font/sans_medium"
                android:layout_marginTop="@dimen/dp15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_number" />


            <TextView
                android:id="@+id/validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                app:fontFamily="@font/sans_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/validityTv" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pin_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginStart="@dimen/dp30"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_number">


                <TextView
                    android:id="@+id/pinTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="12sp"
                    app:fontFamily="@font/sans_medium"/>

                <TextView
                    android:id="@+id/PinNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    app:fontFamily="@font/sans_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pinTv" />


                <ImageView
                    android:id="@+id/copybtnPin"
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp15"
                    android:src="@drawable/copy_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/PinNumber"
                    app:layout_constraintTop_toTopOf="@+id/PinNumber"
                    android:layout_marginStart="@dimen/dp10"
                    android:contentDescription="@string/todo" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/voucher_status"
                android:textColor="@color/green_dark"
                android:textSize="12sp"
                app:fontFamily="@font/sans_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/pin_layout" />

            <TextView
                android:id="@+id/ActiveStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/active"
                android:textColor="@color/green_dark"
                android:textSize="14sp"
                android:textAllCaps="true"
                app:fontFamily="@font/sans_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView21" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/t_amp_c_apply"
                android:textSize="8sp"
                android:layout_marginTop="@dimen/dp5"
                app:fontFamily="@font/sans_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ActiveStatus"
                tools:ignore="SmallSp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>