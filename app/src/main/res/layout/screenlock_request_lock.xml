<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_round_corner"
    android:padding="@dimen/dp10"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp200"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="@dimen/dp5"
        android:layout_gravity="center"
        android:src="@drawable/screen_lock_banner" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp15"
        android:text="Protect your Account"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="@font/sans_medium" />


    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp15"
        android:text="Use screen lock to secure\nyour Tapfo Account"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:fontFamily="@font/sans_medium" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/enableLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp15"
        android:background="@drawable/login_btn1"
        android:backgroundTint="@color/green_dark"
        android:layout_gravity="center"
        android:paddingStart="@dimen/dp20"
        android:paddingEnd="@dimen/dp20"
        android:text="enable screen lock"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/doitletterbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enableLock"
        android:padding="@dimen/dp20"
        android:gravity="center"
        android:text="do it later"
        android:textAllCaps="true"
        android:textColor="@color/grey_dark"
        android:textSize="16sp"
        app:fontFamily="@font/sans_medium" />


</LinearLayout>