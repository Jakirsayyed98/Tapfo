<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.TapfoFood.UserUI.TapfoFoodLocationFragment">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/mylocation_icon"
        app:layout_constraintBottom_toTopOf="@+id/mainlocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/dp10"
        android:padding="@dimen/dp20"/>

    <TextView
        android:id="@+id/mainlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingStart="@dimen/dp20"
        android:paddingEnd="@dimen/dp20"
        android:textStyle="bold"
        app:fontFamily="@font/sans_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <TextView
        android:id="@+id/fullAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/grey_dark"
        android:layout_marginTop="@dimen/dp5"
        android:textSize="14sp"
        app:fontFamily="@font/sans_medium"
        android:paddingStart="@dimen/dp50"
        android:paddingEnd="@dimen/dp50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainlocation" />


    <TextView
        android:id="@+id/nearbytext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp20"
        android:paddingEnd="@dimen/dp20"
        android:text="Nearby restaurants delivering to you"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/dp10"
        app:fontFamily="@font/sans_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullAddress" />

</androidx.constraintlayout.widget.ConstraintLayout>