<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp5"
        android:background="@drawable/button_boarder_2"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/dp2"
        android:gravity="center">

        <TextView
            android:id="@+id/toprated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/button_boarder_5"
            android:backgroundTint="@color/black"
            android:gravity="center"
            android:paddingStart="@dimen/dp15"
            android:paddingTop="@dimen/dp5"
            android:paddingEnd="@dimen/dp15"
            android:paddingBottom="@dimen/dp5"
            android:text="@string/popular_store"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:visibility="visible"
            app:fontFamily="@font/sans_medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp15">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp40"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <LinearLayout
                android:id="@+id/namelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                android:layout_toStartOf="@+id/cashbacklayout"
                android:layout_toEndOf="@+id/logo"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp15">

                <TextView
                    android:id="@+id/nametv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textSize="15sp"
                    app:fontFamily="@font/sans_medium" />

                <TextView
                    android:id="@+id/discription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#565656"
                    android:textSize="10.5sp"
                    app:fontFamily="@font/tt_regular" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cashbacklayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Up to"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:fontFamily="@font/tt_regular" />

                <TextView
                    android:id="@+id/Cashback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:fontFamily="@font/sans_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cashback"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:fontFamily="@font/tt_regular" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_boarder_4"
            android:backgroundTint="@color/green_dark"
            android:paddingStart="@dimen/dp15"
            android:paddingTop="@dimen/dp5"
            android:paddingEnd="@dimen/dp15"
            android:paddingBottom="@dimen/dp5"
            android:text="Instant reward"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:visibility="gone"
            app:fontFamily="@font/tt_regular" />
    </RelativeLayout>

</RelativeLayout>