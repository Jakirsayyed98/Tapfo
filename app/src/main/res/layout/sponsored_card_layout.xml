<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/MiniAppCard"
        android:layout_width="@dimen/dp150"
        android:layout_height="@dimen/dp200"
        android:layout_margin="@dimen/dp10"
        app:cardCornerRadius="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AD"
                android:textSize="6sp"
                android:layout_margin="6dp"
                android:background="#C8C6C6"
                app:fontFamily="@font/sans_medium"
                android:padding="@dimen/dp2"/>

            <ImageView
                android:id="@+id/backround"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/recipeimage1" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cardshades" />

            <TextView
                android:id="@+id/name"
                android:layout_width="@dimen/dp130"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginBottom="15dp"
                android:text="Upto 5% Cashback"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:fontFamily="@font/sans_bold" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>