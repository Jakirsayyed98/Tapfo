<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp10">


    <TextView
        android:id="@+id/rate"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp10"
        android:gravity="center_horizontal"
        android:text="5000"
        android:textSize="20sp"
        app:fontFamily="@font/tt_demibold" />

    <LinearLayout
        android:id="@+id/plandata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@+id/rate"
        android:orientation="vertical"
        android:padding="@dimen/dp5">

        <TextView
            android:id="@+id/validity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Validity:NA"
            app:fontFamily="@font/sans_medium" />

        <TextView
            android:id="@+id/rechargeDiscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:maxLines="3"
            android:text="Enjoy ISD calling at discounted rates for 28 days. For country wise tariff visit www.airtel.in"
            android:textSize="15sp"
            app:fontFamily="@font/tt_regular" />

        <TextView
            android:id="@+id/recharge_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:text="ISD Pack"
            android:textColor="@color/grey_dark"
            app:fontFamily="@font/tt_regular" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@+id/plandata"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="@dimen/dp5"
        android:background="@color/grey_light" />
</RelativeLayout>