<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="Product Details"
                android:textAlignment="textStart"
                android:layout_weight="1"
                android:textColor="@color/black"
                app:fontFamily="@font/tt_regular"
                android:textSize="16sp" />

        <TextView
            android:id="@+id/eanNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans_bold"
            android:text="Cococola data "
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            app:fontFamily="@font/sans_medium"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_boarder_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/savepercent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="10% OFF"
                android:textColor="@color/green_dark"
                android:textSize="15sp"
                app:fontFamily="@font/tt_medium" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Cococola data "
                android:textColor="@color/black"
                android:textSize="16sp"
                app:fontFamily="@font/tt_medium" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"

                        android:text="re15045"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="@color/grey_light"
                        app:fontFamily="@font/sans_regular"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="0.8dp"
                        android:layout_alignEnd="@+id/price"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="10dp"

                        android:background="@color/grey_dark"
                        android:gravity="center_vertical" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/disprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sans_bold"
                    android:text="Cococola data "
                    android:layout_marginStart="10dp"
                    app:fontFamily="@font/sans_medium"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button_boarder_2"
        android:backgroundTint="#E9EEF4"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/less"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:src="@drawable/minus_icon"
            app:tint="@color/green_dark"/>


        <TextView
            android:id="@+id/QtyData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/green_dark"
            android:textSize="30sp"
            app:fontFamily="@font/tt_bold" />


        <ImageView
            android:id="@+id/add"
            android:layout_width="45dp"
            android:layout_height="40dp"
            app:tint="@color/green_dark"
            android:src="@drawable/addition_icon" />

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addToCheckOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_btn1"
        android:backgroundTint="@color/GreenWalletBackgroundDark"
        android:text="Add to Cart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:padding="15dp"
        android:textSize="18sp"
        app:fontFamily="@font/tt_regular" />

</LinearLayout>