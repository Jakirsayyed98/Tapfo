<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:orientation="vertical"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/button_boarder_2"
            android:layout_margin="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cococola data "
                android:textColor="@color/black"
                app:fontFamily="@font/sans_bold"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"/>



            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cococola data "
                android:layout_marginTop="5dp"
                android:fontFamily="@font/sans_bold"
                android:layout_gravity="center_vertical"/>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/button_boarder_2"
        android:backgroundTint="@color/black">

        <ImageView
            android:id="@+id/less"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_less_blue"/>


        <TextView
            android:id="@+id/QtyData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            app:fontFamily="@font/sans_bold"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"/>



        <ImageView
            android:id="@+id/add"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_add_circle"/>

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addToCheckOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn1"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:text="Conform your order"
        android:fontFamily="@font/sans_medium"
        android:layout_marginTop="20dp"/>

</LinearLayout>