<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.BuyVoucher.VoucherPayments.VoucherPaymentStatusFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/paymentlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/paymentdetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:id="@+id/SuccessScreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/sucessScreen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/GreenWalletBackgroundDark"
                            android:orientation="vertical"
                            android:padding="@dimen/dp15">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/back"
                                    android:layout_width="@dimen/dp25"
                                    android:layout_height="@dimen/dp25"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/dp15"
                                    android:src="@drawable/cancel_btn_icon"
                                    app:tint="@color/white" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingStart="-35dp">

                                    <TextView
                                        android:id="@+id/paymentForTitle"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        app:fontFamily="@font/sans_bold" />

                                    <TextView
                                        android:id="@+id/idCreatedAt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp5"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        app:fontFamily="@font/sans_medium" />
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txnid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp10"
                                android:gravity="center_horizontal"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                app:fontFamily="@font/sans_medium" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp30"
                                app:cardCornerRadius="@dimen/dp10">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/dp15">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="3">

                                        <ImageView
                                            android:id="@+id/icon"
                                            android:layout_width="@dimen/dp25"
                                            android:layout_height="@dimen/dp25"
                                            android:layout_gravity="center"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginStart="@dimen/dp40"
                                            android:layout_marginEnd="40dp"
                                            android:orientation="vertical"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toStartOf="@+id/amount"
                                            app:layout_constraintStart_toStartOf="@+id/icon"
                                            app:layout_constraintTop_toTopOf="parent">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/black"
                                                android:text="@string/gift_card_voucher"
                                                android:textSize="@dimen/sp14"
                                                app:fontFamily="@font/sans_medium" />

                                            <TextView
                                                android:id="@+id/names"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/grey_dark"
                                                android:text="@string/myntra_evoucher"
                                                android:textSize="@dimen/sp12"
                                                app:fontFamily="@font/sans_medium" />
                                        </LinearLayout>

                                        <TextView
                                            android:id="@+id/amount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/sp14"
                                            app:fontFamily="@font/sans_medium"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />
                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0.8dp"
                                        android:layout_marginTop="@dimen/dp10"
                                        android:layout_marginBottom="@dimen/dp10"
                                        android:background="@color/grey_light" />

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:id="@+id/walletDetails"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:padding="@dimen/dp5"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent">

                                            <ImageView
                                                android:id="@+id/icon1"
                                                android:layout_width="@dimen/dp15"
                                                android:layout_height="@dimen/dp15"
                                                android:src="@drawable/detail_icon"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent" />

                                            <TextView
                                                android:id="@+id/textView10"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/dp10"
                                                android:text="Wallet Details"
                                                android:textSize="12sp"
                                                app:fontFamily="@font/sans_medium"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintStart_toEndOf="@+id/icon1"
                                                app:layout_constraintTop_toTopOf="parent" />


                                            <ImageView
                                                android:id="@+id/imagedown1"
                                                android:layout_width="@dimen/dp15"
                                                android:layout_height="@dimen/dp15"
                                                android:src="@drawable/arrow_down"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintTop_toTopOf="parent" />

                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:id="@+id/walletDetailsform"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:visibility="gone"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/walletDetails">

                                            <TextView
                                                android:id="@+id/textView11"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Transaction ID"
                                                android:textColor="@color/grey_dark"
                                                android:textSize="12sp"
                                                app:fontFamily="@font/sans_medium"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent" />

                                            <TextView
                                                android:id="@+id/WalletOrderId"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/black"
                                                android:textSize="12sp"
                                                app:fontFamily="@font/sans_medium"
                                                app:layout_constraintTop_toBottomOf="@+id/textView11" />

                                            <View
                                                android:id="@+id/view2"
                                                android:layout_width="match_parent"
                                                android:layout_height="0.8dp"
                                                android:layout_marginTop="@dimen/dp10"
                                                android:background="@color/grey_light"
                                                app:layout_constraintTop_toBottomOf="@+id/WalletOrderId" />


                                            <TextView
                                                android:id="@+id/DebitAmount"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/dp10"
                                                android:text="Debited from wallet"
                                                android:textColor="@color/grey_dark"
                                                android:textSize="12sp"
                                                app:fontFamily="@font/sans_medium"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toBottomOf="@+id/view2" />

                                            <TextView
                                                android:id="@+id/paymentDebitAmount"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/red"
                                                android:textSize="12sp"
                                                app:fontFamily="@font/sans_medium"
                                                app:layout_constraintTop_toBottomOf="@+id/DebitAmount" />


                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0.8dp"
                                        android:layout_marginTop="@dimen/dp10"
                                        android:background="@color/grey_light" />

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:id="@+id/PaymentMethodDetails"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dp10"
                                            android:orientation="horizontal"
                                            android:padding="@dimen/dp5"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent">

                                            <ImageView
                                                android:id="@+id/pspIcon"
                                                android:layout_width="@dimen/dp15"
                                                android:layout_height="@dimen/dp15"
                                                android:src="@drawable/detail_icon"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent" />

                                            <TextView
                                                android:id="@+id/textView14"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/dp10"
                                                android:text="Payment Details"
                                                android:textSize="12sp"
                                                app:fontFamily="@font/sans_medium"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintStart_toEndOf="@+id/pspIcon"
                                                app:layout_constraintTop_toTopOf="parent" />


                                            <ImageView
                                                android:id="@+id/imagedown3"
                                                android:layout_width="@dimen/dp15"
                                                android:layout_height="@dimen/dp15"
                                                android:src="@drawable/arrow_down"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintTop_toTopOf="parent" />

                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:id="@+id/PaymentDetailsform"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:visibility="gone"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/PaymentMethodDetails">


                                            <TextView
                                                android:id="@+id/textView15"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Transaction ID"
                                                android:textColor="@color/grey_dark"
                                                android:textSize="12sp"
                                                app:fontFamily="@font/sans_medium"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent" />

                                            <TextView
                                                android:id="@+id/PaymentOrderId"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="1588402269"
                                                android:textColor="@color/black"
                                                android:textSize="12sp"
                                                app:fontFamily="@font/sans_medium"
                                                app:layout_constraintTop_toBottomOf="@+id/textView15" />

                                            <View
                                                android:id="@+id/view5"
                                                android:layout_width="match_parent"
                                                android:layout_height="0.8dp"
                                                android:layout_marginTop="@dimen/dp10"
                                                android:background="@color/grey_light"
                                                app:layout_constraintTop_toBottomOf="@+id/PaymentOrderId" />


                                            <TextView
                                                android:id="@+id/PSPDebitAmount"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/dp10"
                                                android:text="Payment mode"
                                                android:textColor="@color/grey_dark"
                                                android:textSize="12sp"
                                                app:fontFamily="@font/sans_medium"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toBottomOf="@+id/view5" />

                                            <TextView
                                                android:id="@+id/PaymentMode"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/red"
                                                android:textSize="12sp"
                                                app:fontFamily="@font/sans_medium"
                                                app:layout_constraintTop_toBottomOf="@+id/PSPDebitAmount" />


                                            <androidx.constraintlayout.widget.ConstraintLayout
                                                android:id="@+id/cashbacklayout"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                app:layout_constraintTop_toBottomOf="@+id/PaymentMode">

                                                <View
                                                    android:id="@+id/view3"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0.8dp"
                                                    android:layout_marginTop="@dimen/dp10"
                                                    android:background="@color/grey_light"
                                                    app:layout_constraintTop_toTopOf="parent" />


                                                <TextView
                                                    android:id="@+id/Cashbacktext"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="@dimen/dp10"
                                                    android:text="Paid Amount"
                                                    android:textColor="@color/grey_dark"
                                                    android:textSize="12sp"
                                                    app:fontFamily="@font/sans_medium"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintTop_toBottomOf="@+id/view3" />

                                                <TextView
                                                    android:id="@+id/payble_amount"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:textColor="@color/black"
                                                    android:textSize="12sp"
                                                    app:fontFamily="@font/sans_medium"
                                                    app:layout_constraintTop_toBottomOf="@+id/Cashbacktext" />


                                            </androidx.constraintlayout.widget.ConstraintLayout>
                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp15"
                            android:text="vouchers "
                            app:fontFamily="@font/sans_medium" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/VoucherList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/viewAllVouchers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="View all purchased vouchers"
                            android:textColor="@color/green_dark"
                            android:textSize="12sp"
                            app:fontFamily="@font/sans_medium"
                            android:textAlignment="center"
                            android:layout_marginTop="15dp"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sucessbtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp20"
                            android:background="@drawable/mini_cash_btn"
                            android:backgroundTint="@color/white"
                            android:text="Done"
                            android:textAllCaps="false"
                            android:textColor="@color/new_green2"
                            app:fontFamily="@font/sans_medium"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/failedScreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp15"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/back1"
                        android:layout_width="@dimen/dp25"
                        android:layout_height="@dimen/dp25"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp15"
                        android:src="@drawable/cancel_btn_icon"
                        app:tint="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="-35dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Payment Failed"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:fontFamily="@font/sans_medium" />

                    </LinearLayout>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp30"
                    app:cardCornerRadius="@dimen/dp10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dp15">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your Payment failed due to some error or technical issue. Please try after some time.  If you have been charged, a refund shall be processed within 5-7 working days. Click to retry or try another payment method."
                            app:fontFamily="@font/sans_medium" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/failedbtnlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp10"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/retrybtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:layout_weight="1"
                android:background="@drawable/mini_cash_btn"
                android:backgroundTint="@color/red"
                android:text="Retry"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:fontFamily="@font/sans_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/donbtnAfterFailed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:layout_weight="1"
                android:background="@drawable/button_boarder_2"
                android:text="Done"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:fontFamily="@font/sans_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>