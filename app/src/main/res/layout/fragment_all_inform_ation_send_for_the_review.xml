<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.localbizzUI.BusinessFlow.AllInformAtionSendForTheReviewFragment">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/finaltext"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/send_for_review_icon" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="@dimen/dp20"
        android:text="Submited Sucessfully!"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:fontFamily="@font/sans_medium" />

    <TextView
        android:id="@+id/finaltext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:padding="@dimen/dp20"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:fontFamily="@font/sans_medium" />
</RelativeLayout>