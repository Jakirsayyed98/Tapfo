<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gamewebviewdialog"
    android:orientation="vertical"
    android:elevation="@dimen/dp20"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/gamewebviewdialog"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp20"
        android:paddingLeft="@dimen/dp40"
        android:paddingRight="@dimen/dp20"
        android:paddingBottom="@dimen/dp20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enjoy Superapp-like experience"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:fontFamily="@font/sans_medium" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp5"
                app:cardCornerRadius="@dimen/dp50"
                app:cardElevation="@dimen/dp5">

                <ImageView
                    android:id="@+id/iv_partner"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:padding="@dimen/dp5"
                    tools:src="@drawable/favicon2" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/newicon1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:gravity="center"
                    android:text="Itâ€™s super Fast"
                    android:textColor="@color/grey_dark"
                    app:fontFamily="@font/tt_regular"
                    android:layout_gravity="center"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/newicon_5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Easy To Access"
                    app:fontFamily="@font/tt_regular"
                    android:textColor="@color/grey_dark"
                    android:textSize="14sp"  />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/newicon3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    app:fontFamily="@font/tt_regular"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Save Space"
                    android:textColor="@color/grey_dark"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/dp10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/newicon4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Enjoy Extra Cashback too!"
                    app:fontFamily="@font/tt_regular"
                    android:textColor="@color/grey_dark"
                    android:textSize="14sp"  />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/favourite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginBottom="@dimen/dp10"
            android:background="@drawable/button"
            android:backgroundTint="@color/screenGreen"
            android:gravity="center"
            android:visibility="gone"
            android:padding="@dimen/dp10"
            android:text="+ Add to favourite"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/unfavourite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginBottom="@dimen/dp10"
            android:background="@drawable/button"
            android:backgroundTint="@color/red"
            android:gravity="center"
            android:visibility="gone"
            android:padding="@dimen/dp10"
            android:text="Remove From favourite"
            android:textColor="@color/white" />


    </LinearLayout>

</LinearLayout>