<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="@dimen/dp10"
        app:cardCornerRadius="@dimen/dp10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="170dp"
                android:layout_height="125dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button_boarder_2">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/cardimage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_boarder_2"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/cardshades" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-5dp"
                    app:cardCornerRadius="@dimen/dp10">

                    <ImageView
                        android:id="@+id/logoIv"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:background="@drawable/button_boarder_2"
                        android:backgroundTint="@color/white"
                        android:padding="@dimen/dp5"
                        android:paddingStart="7dp"
                        android:layout_marginStart="@dimen/dp3"
                        android:src="@drawable/flipkart_logo" />
                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/dp10">

                    <TextView
                        android:id="@+id/offerTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:maxLines="2"
                        android:autoSizeTextType="uniform"
                        android:ellipsize="end"
                        app:fontFamily="@font/sans_medium" />

                    <TextView
                        android:id="@+id/descriptionTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:maxLines="2"
                        android:autoSizeTextType="uniform"
                        android:ellipsize="end"
                        android:textColor="@color/grey_dark"
                        android:textSize="@dimen/sp12"
                        app:fontFamily="@font/sans_medium" />

                    <TextView
                        android:id="@+id/cashback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="+ extra cashback*"
                        android:textColor="@color/green_dark"
                        android:autoSizeTextType="uniform"
                        android:maxLines="1"
                        app:fontFamily="@font/sans_medium"
                        android:textSize="12sp" />


                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/voucher_cornor"
                    android:layout_marginEnd="-10dp"
                    android:layout_marginTop="-10dp"
                    android:padding="@dimen/dp5"
                    app:cardCornerRadius="@dimen/dp10">

                    <TextView
                        android:id="@+id/voucher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/green_dark"
                        android:paddingBottom="@dimen/dp5"
                        android:text="Voucher"
                        android:textColor="@color/white"
                        android:paddingEnd="@dimen/dp15"
                        android:paddingTop="@dimen/dp15"
                        android:paddingStart="@dimen/dp5"
                        android:textSize="8sp"
                        app:fontFamily="@font/sans_medium" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dp5"
                    android:layout_marginEnd="@dimen/dp5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/visited"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/dp5"
                        android:text="3.2K  Claimed"
                        app:fontFamily="@font/sans_medium"
                        android:textColor="@color/black"
                        android:textSize="8sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dp5"
                        android:text="T&amp;C Apply"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        app:fontFamily="@font/sans_medium"
                        android:textSize="8sp" />

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>