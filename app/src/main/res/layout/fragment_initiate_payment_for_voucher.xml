<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BuyVoucher.VoucherPayments.InitiatePaymentForVoucherFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BFF5F5F5">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#BFF5F5F5">

                    <LinearLayout
                        android:id="@+id/linearLayout6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/dp15"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/back"
                                android:layout_width="@dimen/dp25"
                                android:layout_height="@dimen/dp25"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/dp15"
                                android:src="@drawable/cancel_btn_icon"
                                app:tint="@color/black"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Payment Options"
                                    android:textSize="16sp"
                                    app:fontFamily="@font/sans_medium" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="select an option to pay"
                                    android:textSize="10sp"
                                    app:fontFamily="@font/sans_medium"/>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/VouchersData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:background="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />


                    <LinearLayout
                        android:id="@+id/linearLayout19"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp15"
                        android:paddingTop="@dimen/dp10"
                        android:paddingRight="@dimen/dp15"
                        android:paddingBottom="@dimen/dp10"
                        app:layout_constraintTop_toBottomOf="@+id/VouchersData">

                        <ImageView
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp10"
                            android:src="@mipmap/ic_launcher" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tapfo"
                                    android:textSize="14sp"
                                    app:fontFamily="@font/sans_medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp5"
                                    android:text="card"
                                    android:textSize="14sp"
                                    app:fontFamily="@font/sans_medium" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/avilable_balance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-3dp"
                                android:textSize="12sp"
                                app:fontFamily="@font/sans_medium" />

                        </LinearLayout>

                        <RadioButton
                            android:id="@+id/radio0"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/green_dark"
                            android:checked="true"
                            android:gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pspAppsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:background="#BFF5F5F5"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout19">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp15"
                            android:paddingRight="@dimen/dp15">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp10"
                                android:layout_marginBottom="@dimen/dp10"
                                android:layout_weight="1"
                                android:text="Pay remaining Amount"
                                android:textSize="14sp"
                                app:fontFamily="@font/sans_medium" />

                            <TextView
                                android:id="@+id/PaybleAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp10"
                                android:layout_marginBottom="@dimen/dp10"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textSize="14sp"
                                app:fontFamily="@font/sans_medium" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#BFF5F5F5"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp15"
                            android:paddingTop="@dimen/dp10"
                            android:paddingRight="@dimen/dp15"
                            android:paddingBottom="@dimen/dp10">

                            <ImageView
                                android:layout_width="@dimen/dp20"
                                android:layout_height="@dimen/dp20"
                                android:src="@drawable/upi_icon_new" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp5"
                                android:text="Pay Using UPI Apps"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                app:fontFamily="@font/sans_medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" ( Recommended ) "
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                app:fontFamily="@font/sans_medium" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingLeft="@dimen/dp15"
                            android:paddingRight="@dimen/dp15">


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/PSPApps"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/bhim_new_icon"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp15"
            app:layout_constraintBottom_toBottomOf="@+id/nestedScrollView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payable Amount"
                    android:textSize="14sp"
                    app:fontFamily="@font/sans_medium" />


                <TextView
                    android:id="@+id/paybleAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â‚¹199"
                    android:textSize="14sp"
                    app:fontFamily="@font/sans_medium" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="pay now"
                android:layout_marginStart="20dp"
                android:background="@drawable/button_boarder_3"
                android:backgroundTint="@color/green_dark"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_weight="1"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="Tapfo"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:fontFamily="@font/sans_medium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text=" Pay"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:fontFamily="@font/sans_medium" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Simple. Secure. Fast"
                    android:textColor="#0A0A0A"
                    android:textSize="12sp"
                    app:fontFamily="@font/sans_medium" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:gravity="center"
                    android:text="processing..."
                    android:textColor="#0A0A0A"
                    android:textSize="12sp"
                    app:fontFamily="@font/sans_medium" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="@dimen/dp15"
                android:src="@drawable/bhim_new_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>